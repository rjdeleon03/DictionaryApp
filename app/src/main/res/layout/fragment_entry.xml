<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="viewModel"
            type="com.rjdeleon.dictionaryapp.feature.entry.EntryViewModel"/>
    </data>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/wordField"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".feature.entry.EntryFragment">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:foreground="#AA000000"
            android:scaleType="centerCrop"
            android:src="@drawable/pattern"
            app:layout_constraintBottom_toBottomOf="@+id/linearLayout"
            app:layout_constraintEnd_toEndOf="@+id/linearLayout"
            app:layout_constraintStart_toStartOf="@+id/linearLayout"
            app:layout_constraintTop_toTopOf="@+id/linearLayout"
            tools:ignore="ContentDescription" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="230dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@{viewModel.entry.word}"
                app:fontFamily="@font/kaushanscript"
                android:textSize="40sp"
                android:textColor="@android:color/white"
                android:textAppearance="@style/TextAppearance.AppCompat.Headline"
                android:shadowColor="#ff000000"
                android:shadowRadius="3.0"
                android:shadowDx="3.0"
                android:shadowDy="3.0"
                android:transitionName="entry_item_transition"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/meaningSetList"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:paddingTop="4dp"
            android:paddingBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            tools:listitem="@layout/fragment_entry_meaning_item" />

        <ImageButton
            android:id="@+id/upButton"
            android:layout_width="48dp"
            android:layout_height="?attr/actionBarSize"
            android:src="@drawable/ic_arrow_back_black_24dp"
            android:background="@android:color/transparent"
            android:shadowColor="#ff000000"
            android:shadowRadius="3.0"
            android:shadowDx="3.0"
            android:shadowDy="3.0"
            tools:ignore="ContentDescription" />

    </android.support.constraint.ConstraintLayout>
</layout>